#include <iostream>

void printResult();

int main()
{
    printResult();

    return 0;
}

void printResult()
{
    int outer{ 1 };
    while (outer <= 5)
    {

        int inner{ 1 };

        static int indentCount{ 1 };

        int indent{ 5 - indentCount };

        while (indent > 0)
        {
            std::cout << "  ";

            --indent;
        }
        while (inner <= outer)
        {
            std::cout << inner << ' ';

            ++inner;
        }

        std::cout << '\n';

        ++indentCount;

        ++outer;
    }
}
